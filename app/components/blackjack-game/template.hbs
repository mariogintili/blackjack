<div class="interface dealer">
  <h1>The Dealer</h1>
  <div class="dealer-cards">
    {{#each dealerCards as |dealerCard|}}
      {{#if dealerCard.isHidden}}
        <div class="blackjack-card hidden-placeholder">
          <h4 class="card-name">?</h4>
          <h4 class="card-suite">?</h4>
        </div>
      {{else}}
        <div class="blackjack-card dealer-card">
          <h4 class="card-name">{{dealerCard.name}}</h4>
          <h4 class="card-suite">{{dealerCard.suite}}</h4>
        </div>
      {{/if}}
    {{/each}}
    <div class="actions-container">
      {{#if dealerHasShownHisCard}}
        <p class="computed-dealer-score">{{dealerHandScore}}</p>
      {{/if}}
    </div>
  </div>
</div>

<div class="interface user">
  <h1>You</h1>
  <div class="user-cards">
    {{#each userCards as |userCard|}}
      <div class="blackjack-card user-card">
        <h4 class="card-name">{{userCard.name}}</h4>
        <h4 class="card-suite">{{userCard.suite}}</h4>
      </div>
    {{/each}}
  </div>
  <div class="actions-container">
    {{#if gameIsFinished}}
      <p>{{gameFinishedMessage}}</p>
      <button class="restart" {{action "restart"}}>Restart</button>
    {{else}}
      <button class="hit-me-btn" {{action "handleUserAction" "hitMe"}}>Hit me</button>
      <button class="stick-btn" {{action "handleUserAction" "stick"}}>Stick</button>
    {{/if}}
    <p class="computed-user-score">{{userHandScore}}</p>
  </div>
</div>
